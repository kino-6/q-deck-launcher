{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "q-deck-launcher",
  "version": "0.1.0",
  "identifier": "com.tkino.q-deck-launcher",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Q-Deck Launcher Settings",
        "width": 800,
        "height": 600,
        "minWidth": 600,
        "minHeight": 400,
        "center": true,
        "resizable": true,
        "maximizable": false,
        "minimizable": true,
        "closable": true,
        "decorations": true,
        "alwaysOnTop": false,
        "visible": false,
        "transparent": false
      },
      {
        "label": "overlay",
        "title": "Q-Deck Overlay",
        "width": 100,
        "height": 100,
        "center": true,
        "resizable": false,
        "maximizable": false,
        "minimizable": false,
        "closable": false,
        "decorations": false,
        "alwaysOnTop": true,
        "visible": false,
        "transparent": true,
        "skipTaskbar": true,
        "shadow": false,
        "focus": true,
        "url": "/overlay"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "../config.yaml"
    ]
  }
}
